<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="9dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/user64" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="171dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="Doctor mohammed"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:textStyle="bold"
                    android:textColor="@color/tool"
                    android:background="#00000000"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_below="@+id/textView3"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    android:layout_toRightOf="@+id/textView3"
                    android:progressBackgroundTint="@color/colorAccent"
                    android:layout_toEndOf="@+id/imageView" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:textColor="@color/tool"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="Evalution" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/stethoscope"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dentisty-Professor"
                    android:textColor="@color/tool"
                    android:textColorHint="#fff"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/tool"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/placeholder"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/mail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="El-Zamalek"
                    android:textColor="@color/tool"
                    android:textColorHint="#fff"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/tool"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cash"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/mail232"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Examination Fee 100LE"
                    android:textColor="@color/tool"
                    android:textColorHint="#fff"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="2dp">
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/b1"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Book Today"
                    android:textColor="#fff"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/b2"
                    android:layout_width="120dp"
                    android:layout_height="52dp"
                    android:text="Book Tommorrow"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/b3"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="All Appointments"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>


